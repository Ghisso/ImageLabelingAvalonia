<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.2;netcoreapp3</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Models\"/>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\*"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.8.0"/>
    <PackageReference Include="Avalonia.Desktop" Version="0.8.0"/>
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.8.0"/>
    <PackageReference Include="System.CommandLine.DragonFruit" Version="0.3.0-alpha.19317.1"/>
  </ItemGroup>
</Project>